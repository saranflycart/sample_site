<form validate="true" serverside_validate="true">
	<fieldset class="span5" name="basic_information" label="J2STORE_VOUCHER_BASIC_INFORMATION">
	 <field name="voucher_code" type="text"
                   label="J2STORE_VOUCHER_CODE_LABEL"
                   class="input-xlarge" required="true" />                     
      
 		                
      <field name="email_to" type="text"
                   label="J2STORE_VOUCHER_TO_EMAIL_LABEL"
                   class="input" required="true"/>  
         
     <field name="voucher_value" type="text"
                   label="J2STORE_VOUCHER_VALUE_LABEL"
                   class="input" required="true" />                     
            	
            	
        
        <field name="type" type="list" label="J2STORE_VOUCHER_TYPE_LABEL" 
			       labelclass="" class="inputbox" filter="intval" size="1" default="1">
			<option value="giftcard">J2STORE_VOUCHER_TYPE_GIFT_CARD</option>			
		</field>    		        
		<field name="enabled" type="list" label="J2STORE_ENABLED"
			       labelclass="" class="inputbox" filter="intval" size="1" default="1">
			<option value="1">J2STORE_ENABLE</option>
			<option value="0">J2STORE_DISABLE</option>
		</field>
     <field name="subject" type="text"  label="J2STORE_VOUCHER_MESSAGE_LABEL" class="input-xlarge" required="true"   />
    </fieldset>
    <fieldset class="span7"  name="advanced_information" label="J2STORE_VOUCHER_ADVANCED_INFORMATION">
        <field name="email_body" type="editor"  label="J2STORE_VOUCHER_BODY_LABEL" required="true" />  
    </fieldset>     
</form>
